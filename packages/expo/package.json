{
  "name": "@hypervideo-dev/expo",
  "version": "0.1.2",
  "description": "Native iOS Metal-based stacked-alpha transparent video player - fixes Skia GC crashes",
  "main": "./src/index.ts",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "ios",
    "expo-module.config.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --external react --external react-native --external expo-modules-core",
    "dev": "tsup src/index.ts --format cjs,esm --watch --external react --external react-native --external expo-modules-core",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "expo": ">=54.0.0",
    "expo-modules-core": ">=3.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.76.0"
  },
  "devDependencies": {
    "@types/react": "~19.0.0",
    "expo-modules-core": "^3.0.0",
    "react": "^18.2.0",
    "react-native": "^0.76.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "hypervideo",
    "expo",
    "react-native",
    "video",
    "transparency",
    "alpha",
    "metal",
    "stacked-alpha",
    "native",
    "ios"
  ],
  "license": "MIT",
  "author": "HyperSocial Inc",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypersocialinc/hypervideo.git",
    "directory": "packages/expo"
  },
  "homepage": "https://hypervideo.dev"
}
